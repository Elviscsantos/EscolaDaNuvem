temp = float(input("Temperatura: "))
origem = input("De (C, F, K): ").upper()
destino = input("Para (C, F, K): ").upper()

# Converte tudo para Celsius primeiro
if origem == "F": c = (temp - 32) * 5/9
elif origem == "K": c = temp - 273.15
else: c = temp

# Converte de Celsius para o destino
if destino == "F": res = (c * 9/5) + 32
elif destino == "K": res = c + 273.15
else: res = c

print(f"Resultado: {res:.2f} {destino}")
